{
  "name": "balarila-web",
  "version": "0.1.0",
  "description": "Balarila Frontend Project",
  "repository": "https://github.com/su0h/balarila-web.git",
  "authors": [
    "Paolo Espiritu <paolo.v.esiritu@gmail.com>",
    "Joshue Jadie <sample@email.com>",
    "Andre Ponce <sample@email.com>"
  ],
  "license": "MIT",
  "private": true,
  "engines": {
    "node": ">= 20.9.0"
  },
  "scripts": {
    "start": "cross-env NODE_ENV=development webpack serve --config webpack/webpack.config.js --open",
    "build": "cross-env NODE_ENV=production webpack --config build/webpack.config.js",
    "commit": "npx git-cz",
    "coverage:report": "cross-env NODE_ENV=test_coverage jest --detectOpenHandles --coverage --watchAll=false",
    "test:jest": "jest --detectOpenHandles",
    "test:eslint": "eslint \"src/**/*.{js,ts,tsx}\"",
    "test:scsslint": "stylelint src/**/*.scss",
    "fix:eslint": "eslint \"src/**/*.{js,ts,tsx}\" --fix",
    "fix:scsslint": "stylelint src/**/*.scss --fix",
    "prepare": "husky install"
  },
  "config": {
    "commitizen": {
      "path": "./node_modules/cz-conventional-changelog"
    }
  },
  "lint-staged": {
    "src/**/*.{js,ts,tsx}": "eslint --fix",
    "src/**/*.scss": "stylelint --fix"
  },
  "dependencies": {
    "lodash": "^4.17.21",
    "react": "^18.2.0",
    "react-dom": "^18.2.0"
  },
  "devDependencies": {
    "@babel/core": "^7.23.6",
    "@babel/preset-env": "^7.23.6",
    "@babel/preset-react": "^7.23.3",
    "@babel/preset-typescript": "^7.23.3",
    "@jest/types": "^29.6.3",
    "@testing-library/jest-dom": "^6.1.5",
    "@testing-library/react": "^14.1.2",
    "@testing-library/user-event": "^14.5.1",
    "@types/jest": "^29.5.11",
    "@types/node": "^20.10.5",
    "@types/react": "^18.2.45",
    "@types/react-dom": "^18.2.18",
    "@typescript-eslint/eslint-plugin": "^6.15.0",
    "@typescript-eslint/parser": "^6.15.0",
    "babel-loader": "^9.1.3",
    "cross-env": "^7.0.3",
    "cz-conventional-changelog": "^3.3.0",
    "eslint": "^8.56.0",
    "eslint-config-standard": "^17.1.0",
    "eslint-plugin-jest": "^27.6.0",
    "eslint-plugin-react": "^7.33.2",
    "eslint-plugin-react-hooks": "^4.6.0",
    "eslint-plugin-testing-library": "^6.2.0",
    "file-loader": "^6.2.0",
    "html-webpack-plugin": "^5.6.0",
    "husky": "^8.0.3",
    "jest": "^29.7.0",
    "lint-staged": "^15.2.0",
    "prettier": "^3.1.1",
    "stylelint": "^16.0.2",
    "stylelint-config-standard-scss": "^12.0.0",
    "ts-loader": "^9.5.1",
    "typescript": "^5.3.3",
    "webpack": "^5.89.0",
    "webpack-cli": "^5.1.4",
    "webpack-dev-server": "^4.15.1"
  }
}
